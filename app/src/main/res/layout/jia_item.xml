<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/jia_item_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:background="@drawable/jia_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/jia_item_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:maxEms="15"
            android:singleLine="true"
            android:text="安徽省第一附属医院"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/jia_item_location"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="20"
            android:singleLine="true"
            android:text="蜀山区绩溪路218号"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jia_item_bed"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="20"
            android:singleLine="true"
            android:text="蜀山区绩溪路218号"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jia_item_cost"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxEms="20"
            android:singleLine="true"
            android:text="蜀山区绩溪路218号"
            android:layout_marginBottom="5dp"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
